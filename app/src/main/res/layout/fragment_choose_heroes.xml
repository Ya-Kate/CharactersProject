<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_three">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_choose"
            android:layout_width="@dimen/dp300"
            android:layout_height="300dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="@dimen/dp22"
            android:contentDescription="@string/disney_hero" />

        <TextView
            android:id="@+id/name_hero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="320dp"
            android:background="@null"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/name_hero"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <ImageButton
            android:id="@+id/button_back"
            style="@style/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp40"
            android:layout_marginTop="@dimen/dp90"
            android:background="@drawable/bg_back"
            android:contentDescription="@string/go_back" />


        <ImageButton
            android:id="@+id/button_add_my_disney"
            style="@style/button_my_disney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp300"
            android:layout_marginTop="@dimen/dp90"
            android:background="@drawable/bg_add_my_like_disney"
            android:contentDescription="@string/my_like_hero"
            app:tint="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_films"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp400"
            android:layout_marginEnd="@dimen/dp_16" />

    </FrameLayout>

</androidx.core.widget.NestedScrollView>
