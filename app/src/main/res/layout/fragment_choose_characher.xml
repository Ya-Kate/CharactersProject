<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_three">

    <ImageView
        android:id="@+id/image_choose"
        android:layout_width="@dimen/dp300"
        android:layout_height="300dp"
        android:layout_marginStart="60dp" />

    <TextView
        android:id="@+id/name_characher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="320dp"
        android:background="@null"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/name_characher"/>

    <ImageButton
        android:id="@+id/botton_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp40"
        android:layout_marginTop="@dimen/dp90"
        android:background="@drawable/bg_back"
        style="@style/button_back"/>

    <ImageButton
        android:id="@+id/button_add_my_disney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp300"
        android:layout_marginTop="@dimen/dp90"
        android:background="@drawable/bg_add_my_like_disney"
        style="@style/button_my_disney"
        app:tint="@color/white" />


</FrameLayout>
